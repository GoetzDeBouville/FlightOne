<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:background="@color/gray3"
    android:paddingTop="@dimen/padding_8">

    <ImageView
        android:id="@+id/iv_place"
        android:layout_width="@dimen/image_size_40"
        android:layout_height="@dimen/image_size_40"
        android:layout_marginBottom="@dimen/margin_8"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_city"
        style="@style/FlightOne.Text.Bold.OfferTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_description"
        app:layout_constraintStart_toEndOf="@id/iv_place"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/FlightOne.Text.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_8"
        android:textColor="@color/gray5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_place"
        app:layout_constraintTop_toBottomOf="@+id/tv_city"
        tools:text="[Популярное направление]" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>