<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray_rounded_corners_50"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_8">

    <ImageView
        android:id="@+id/iv_action_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@drawable/ic_filter_16" />

    <TextView
        android:id="@+id/tv_action_title"
        style="@style/FlightOne.Text.Medium.Title.Italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:textColor="@color/white"
        tools:text="1, эконом" />

    <TextView
        android:id="@+id/tv_end_text"
        style="@style/FlightOne.Text.Medium.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray6"
        tools:text=", сб" />
</LinearLayout>