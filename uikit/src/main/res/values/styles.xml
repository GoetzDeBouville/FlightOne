<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FlightOne.Text" parent="TextAppearance.AppCompat" />

    <style name="FlightOne.Text.Medium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="FlightOne.Text.Bold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="FlightOne.Text.Medium.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FlightOne.Text.Medium.Title.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FlightOne.Text.Bold.MainTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="FlightOne.Text.Bold.OfferTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FlightOne.Text.Bold.OfferTitle.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/image_radius_16</item>
    </style>

    <style name="FlightOne.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingVertical">@dimen/padding_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray6</item>
        <item name="android:autofillHints">auto</item>
        <item name="android:inputType">text</item>
    </style>
</resources>